{
  "name": "liquid-staking",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "build": "npx @alephium/cli compile",
    "devnet": "docker run -it --rm -p 22973:22973 -p 127.0.0.1:15973:15973 alephium/dev-env:latest",
    "devnet:detached": "docker run -d --rm -p 22973:22973 -p 127.0.0.1:15973:15973 --name alephium-devnet alephium/dev-env:latest",
    "devnet:stop": "docker stop alephium-devnet",
    "devnet:logs": "docker logs alephium-devnet",
    "devnet:clean": "docker rm -f alephium-devnet",
    "test:ci": "npm run devnet:detached && sleep 5 && npm test && npm run devnet:stop",
    "build:watch": "npx @alephium/cli compile --watch"
  },
  "dependencies": {
    "@alephium/web3": "^1.7.0",
    "@alephium/cli": "^0.19.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "@alephium/web3-test": "^0.19.0",
    "@types/node": "^18.0.0",
    "@alephium/web3-wallet": "^0.19.0",
    "@types/jest": "^29.5.0",
    "ts-node": "^10.9.1"
  }
}
